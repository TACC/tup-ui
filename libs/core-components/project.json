{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/core-components/src",
  "projectType": "library",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx vite"
          }
        ],
        "cwd": "libs/core-components"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx vite build --emptyOutDir"
          }
        ],
        "cwd": "libs/core-components"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/core-components/src/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/core-components"],
      "options": {
        "jestConfig": "libs/core-components/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx start-storybook -p 6006"
          }
        ],
        "cwd": "libs/core-components"
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx build-storybook --output-dir ../../dist/storybooks/core-components"
          }
        ],
        "cwd": "libs/core-components"
      }
    }
  },
  "tags": []
}
